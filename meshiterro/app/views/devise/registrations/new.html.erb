<h2>Sign up</h2>
<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group has-icon">
    <%= f.label :name, class: "control-label sr-only", for: "inputName" %><br />
    <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前" %>
  </div>

  <div class="form-group has-icon">
    <%= f.label :email, class: "control-label sr-only" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"メール" %>
  </div>

  <div class="form-group has-icon">
    <%= f.label :password, class: "control-label sr-only" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"パスワード" %>
  </div>

  <div class="form-group has-icon">
    <%= f.label :password_confirmation, class: "control-label sr-only" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"確認" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
